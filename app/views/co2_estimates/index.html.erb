<% if current_user %>
<h1 id='title'>Take the Carbon Emittance Estimation Quiz!</h1>
<%= link_to "Quiz", new_co2_estimate_path, class: 'btn btn-default' %>
<hr>
<% else %>
  <h1 id=title>Sign in to take the Quiz!</h1>
<% end %>

<%= link_to "Methods", methods_path, class: 'btn btn-default' %>

<h1 class="josefin">Raw Data Overview</h1>

<% if @filter_type != nil%>
  <h3 id="about">Sorted by <em><%= @filter_type %></em></h3>
<% end %>

<%= link_to "Lowest", :sort_by => 'lowest' %> |
<%= link_to "Highest", :sort_by => 'highest' %> |
<%= link_to "Alphabetical", :sort_by => 'alphabetical' %> |
<%= link_to "Reverse Alphabetical", :sort_by => 'reverse_alpha' %> |
<%= link_to "Newest", :sort_by => 'newest' %> |
<%= link_to "Oldest", :sort_by => 'oldest' %>



<table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>State</th>
        <th>Estimated Emissions (lbs CO<sub>2</sub>/mo)</th>
      </tr>
    </thead>
    <tbody>
      <% @co2_estimates.each do |est| %>
        <tr>
          <td><h4><em><%= est.user.name %></em></h4></td>
          <td><%= est.user.state %></d>
          <td><%= est.monthly_emittance %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
